\begin_inset Formula $<\Psi|=\sum\limits _{n}c_{n}^{*}<n|$
\end_inset

;
\end_layout

\begin_layout Enumerate
利用投影算符
\begin_inset Formula $\hat{P_{n}}=|n><n|$
\end_inset

, 则
\begin_inset Formula $c_{n}^{*}c_{n}=<\hat{P_{n}}>$
\end_inset

;
\end_layout

