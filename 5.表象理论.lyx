\begin_layout Enumerate
离散谱归一化条件: 
\begin_inset Formula $1=<\Psi|\Psi>=\sum\limits _{n}|c_{n}|^{2}$
\end_inset

;
\end_layout

\begin_layout Enumerate
态矢量内积: 对于
\begin_inset Formula $|A>=\sum\limits _{n}a_{n}|n>,B=\sum\limits _{n}b_{n}|n>,<A|B>=\sum\limits _{n}a_{n}^{*}b_{n}$
\end_inset

;
\end_layout

\begin_layout Enumerate
角动量表象: 选
\begin_inset Formula $\hat{L_{z}}$
\end_inset

与
\begin_inset Formula $\hat{L}^{2}$
\end_inset

的共同本征态
\begin_inset Formula $|lm>$
\end_inset

为基矢的表象;
\end_layout

\begin_deeper
\begin_layout Enumerate
自身表象: 
\begin_inset Formula $<l'm'|\hat{L_{z}}|lm>=m\hbar\delta_{l'l}\delta_{m'm}$
\end_inset

, 
\begin_inset Formula $<l'm'|\hat{L}^{2}|lm>=l(l+1)\hbar^{2}\delta_{l'l}\delta_{m'm}$
\end_inset

;
\end_layout

\begin_layout Enumerate
角动量算符: 
\begin_inset Formula $<l'm'|\hat{L}_{x}|lm>=$
\end_inset


\begin_inset Formula $\frac{\hbar}{2}\left[\sqrt{(l+m+1)(l-m)}\delta_{m',m+1}+\sqrt{(l-m+1)(l+m)}\delta_{m',m-1}\right]\delta_{l'l}$
\end_inset

, 
\begin_inset Formula $<l'm'|\hat{L}_{x}|lm>=$
\end_inset


\begin_inset Formula $\frac{i\hbar}{2}\left[-\sqrt{(l+m+1)(l-m)}\delta_{m',m+1}+\sqrt{(l-m+1)(l+m)}\delta_{m',m-1}\right]\delta_{l'l}$
\end_inset

;
\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $\hat{L}_{x}$
\end_inset

的矩阵元总是
\begin_inset Formula $0$
\end_inset

和正实数;
\end_layout

\begin_layout Enumerate
\begin_inset Formula $\hat{L}_{y}$
\end_inset

的矩阵元总是
\begin_inset Formula $0$
\end_inset

和纯虚数;
\end_layout

\end_deeper
\begin_layout Enumerate
升降阶算符: 
\begin_inset Formula $\hat{L_{+}}=\left(\begin{array}{ccc}
0 & \sqrt{2}\hbar & 0\\
0 & 0 & \sqrt{2}\hbar\\
0 & 0 & 0
\end{array}\right)$
\end_inset

, 
\begin_inset Formula $\hat{L_{-}}=\left(\begin{array}{ccc}
0 & 0 & 0\\
\sqrt{2}\hbar & 0 & 0\\
0 & \sqrt{2}\hbar & 0
\end{array}\right)$
\end_inset

;
\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $\hat{L}_{x}=\frac{1}{2}(\hat{L_{+}}+\hat{L}_{-})$
\end_inset

, 
\begin_inset Formula $\hat{L}_{y}=\frac{1}{2i}(\hat{L}_{+}-\hat{L}_{-})$
\end_inset

;
\end_layout

\end_deeper
\end_deeper
\begin_layout Enumerate
占有数(或粒子数)表象: 以
\begin_inset Formula $|n>$
\end_inset

表示
\begin_inset Formula $\psi_{n}$
\end_inset

对应的本征态, 即以
\begin_inset Formula $|n>$
\end_inset

为基矢的表象;
\end_layout

\begin_deeper
\begin_layout Enumerate
波色子对易关系: 
\begin_inset Formula $[\hat{a},\hat{a}^{\dagger}]=1$
\end_inset

;
\end_layout

\begin_layout Enumerate
产生算符(
\begin_inset Formula $\hat{a}^{\dagger}$
\end_inset

)和湮灭算符(
\begin_inset Formula $\hat{a}$
\end_inset

): 产生湮灭算符满足波色子对易关系, 
\begin_inset Formula $[\hat{a},\hat{a}^{\dagger}]=1$
\end_inset

;
\end_layout

\begin_deeper
\begin_layout Enumerate
定义: 
\begin_inset Formula $[\hat{a},\hat{a}]=[\hat{a}^{\dagger},\hat{a}^{\dagger}]=0$
\end_inset

;
\end_layout

\begin_layout Enumerate
\begin_inset Formula $\hat{a}|n>=\sqrt{n}|n-1>,\hat{a}^{\dagger}|n>=\sqrt{n+1}|n+1>,\hat{a}|0>=0$
\end_inset

;
\end_layout

\end_deeper
\begin_layout Enumerate
粒子数算符: 
\begin_inset Formula $N=\hat{a}^{\dagger}\hat{a},\hat{N}|n>=n|n>$
\end_inset

;
\end_layout

\begin_deeper
\begin_layout Enumerate
粒子数递推表达式: 
\begin_inset Formula $|n>=\frac{(a^{\dagger})^{n}}{\sqrt{n!}}|0>$
\end_inset

;
\end_layout

\begin_layout Enumerate
电子考虑自旋的量子数: 
\begin_inset Formula $\hat{N}=\hat{a}_{\uparrow}^{\dagger}\hat{a}_{\uparrow}+\hat{a}_{\downarrow}^{\dagger}\hat{a}_{\downarrow}$
\end_inset

;
\end_layout

\end_deeper
\begin_layout Enumerate
\begin_inset Formula $[\hat{a},(\hat{a}^{\dagger})^{n}]=n(\hat{a}^{\dagger})^{n-1}$
\end_inset

或
\begin_inset Formula $\hat{a}(\hat{a}^{\dagger})^{n}=(\hat{a}^{\dagger})^{n}\hat{a}+n(\hat{a}^{\dagger})^{n-1}$
\end_inset

;
\end_layout

\begin_deeper
\begin_layout Enumerate
推广: 
\begin_inset Formula $[\hat{a},f(\hat{a}^{\dagger})]=\frac{\partial f(\hat{a}^{\dagger})}{\partial\hat{a}^{\dagger}}$
\end_inset

;
\end_layout

\end_deeper
